datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(uuid())
  username  String  @unique
  email     String  @default("")
  avatarUrl String? @default("")
    guilds    Guild[]
}

model Guild {
  id          String  @id @default(uuid())
  name        String
  iconUrl     String?
  owner       User    @relation(fields: [ownerId], references: [id])
  ownerId     String
}